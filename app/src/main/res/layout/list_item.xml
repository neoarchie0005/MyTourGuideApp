<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_photo_image"
            style="@style/listItem_imageview" />

        <TextView
            android:id="@+id/name_text_view"
            style="@style/listItem_nametextview" />

        <TextView
            android:id="@+id/description_text_view"
            style="@style/listItem_descriptiontextview" />

        <TextView
            android:id="@+id/address_text_view"
            style="@style/listItem_addresstextview" />

        <TextView
            android:id="@+id/phone_text_view"
            style="@style/listItem_phonetextview" />

    </LinearLayout>

</LinearLayout>